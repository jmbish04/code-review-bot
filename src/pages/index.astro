---
import Layout from '../layouts/Layout.astro';
import { WebTerminal } from '../components/Terminal';
import { TaskForm } from '../components/TaskForm';
import { PRDashboard } from '../components/PRDashboard';
import { TaskMonitor } from '../components/TaskMonitor';
import { DeploymentChart } from '../components/DeploymentChart';
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "@/components/ui/card";
import { getDb } from '../db';
import { agentTasks } from '../db/schema';
import { desc } from 'drizzle-orm';

// Fetch recent tasks for the activity log
// @ts-ignore
const env = Astro.locals.runtime?.env || process.env;
let recentTasks = [];
try {
    const db = getDb(env.DB);
    recentTasks = await db.select().from(agentTasks).orderBy(desc(agentTasks.createdAt)).limit(10);
} catch (e) {
    console.error('Failed to fetch tasks', e);
}
---

<Layout title="Code Review Bot | Dashboard">
    <div class="space-y-6">
        <h1 class="text-3xl font-bold tracking-tight">Dashboard</h1>

        {/* Stats Row */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <Card className="bg-card">
                <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
                    <CardTitle className="text-sm font-medium">Active Tasks</CardTitle>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        strokeLinecap="round"
                        strokeLinejoin="round"
                        strokeWidth="2"
                        class="h-4 w-4 text-muted-foreground"
                    >
                        <path d="M12 2v20M2 12h20" />
                    </svg>
                </CardHeader>
                <CardContent>
                    <div class="text-2xl font-bold">{recentTasks.filter(t => t.status !== 'completed').length}</div>
                    <p class="text-xs text-muted-foreground">Pending execution</p>
                </CardContent>
            </Card>

            <Card className="bg-card">
                <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
                    <CardTitle className="text-sm font-medium">Deployments</CardTitle>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        strokeLinecap="round"
                        strokeLinejoin="round"
                        strokeWidth="2"
                        class="h-4 w-4 text-muted-foreground"
                    >
                        <path d="M22 12h-4l-3 9L9 3l-3 9H2" />
                    </svg>
                </CardHeader>
                <CardContent>
                    <div class="text-2xl font-bold">0</div>
                    <p class="text-xs text-muted-foreground">Last 24 hours</p>
                </CardContent>
            </Card>
            
             <Card className="bg-card md:col-span-2 lg:col-span-2">
                <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
                     <CardTitle className="text-sm font-medium">System Health</CardTitle>
                     <div class="h-2 w-2 rounded-full bg-green-500 animate-pulse"></div>
                </CardHeader>
                 <CardContent>
                    <div class="text-2xl font-bold">Operational</div>
                    <p class="text-xs text-muted-foreground">All systems normal</p>
                </CardContent>
             </Card>
        </div>

        {/* Charts & Graphs */}
        <div class="grid grid-cols-1 gap-4 h-[300px]">
             <DeploymentChart client:load />
        </div>

        <div class="space-y-4">
             <h2 class="text-xl font-bold tracking-tight">Pull Requests</h2>
             <PRDashboard client:load />
        </div>

        {/* Action & Terminal Grid */}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 h-[500px]">
            {/* Left: Create Task */}
            <Card className="h-full flex flex-col">
                <CardHeader>
                    <CardTitle>Create Agent Task</CardTitle>
                </CardHeader>
                <CardContent className="flex-1">
                    <TaskForm client:load />
                </CardContent>
            </Card>

            {/* Right: Live Terminal */}
            <Card className="h-full flex flex-col">
                <CardHeader>
                    <CardTitle>Live Terminal</CardTitle>
                </CardHeader>
                <CardContent className="flex-1 p-0 overflow-hidden relative">
                    <div class="absolute inset-x-0 bottom-0 top-0">
                         {   
                            (() => {
                                const wsProtocol = Astro.url.protocol === 'https:' ? 'wss:' : 'ws:';
                                const wsUrl = `${wsProtocol}//${Astro.url.host}/api/logs`;
                                return <WebTerminal client:visible streamUrl={wsUrl} />;
                            })()
                        }
                    </div>
                </CardContent>
            </Card>
        </div>

        {/* Recent Activity */}
        <TaskMonitor client:load />
    </div>
</Layout>

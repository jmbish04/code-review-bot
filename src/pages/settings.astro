---
import Layout from '../layouts/Layout.astro';
import { getDb } from '../db';
import { settings } from '../db/schema';
import { eq } from 'drizzle-orm';

// @ts-ignore
const env = Astro.locals.runtime?.env || process.env;
let currentSettings: Record<string, string> = {};

try {
    const db = getDb(env.DB);
    const rows = await db.select().from(settings);
    rows.forEach(r => currentSettings[r.key] = r.value);
} catch (e) {
    console.error('Failed to fetch settings', e);
}

const provider = currentSettings['PROVIDER'] || 'jules';
const owner = currentSettings['OWNER'] || 'jmbish04';
---

<Layout title="Code Review Bot | Settings">
    <div class="max-w-2xl mx-auto space-y-6">
        <h1 class="text-3xl font-bold tracking-tight">Settings</h1>
        
        <div class="p-6 bg-card border border-border rounded-lg">
            <h2 className="text-xl font-semibold mb-4">Configuration</h2>
            <form id="settings-form" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium mb-1">Default AI Provider</label>
                    <select name="PROVIDER" class="w-full bg-input border border-border rounded-md px-3 py-2" value={provider}>
                        <option value="jules">Jules</option>
                        <option value="gemini">Gemini</option>
                        <option value="gpt4">GPT-4</option>
                    </select>
                </div>
                
                 <div>
                    <label class="block text-sm font-medium mb-1">Repository Owner (Default)</label>
                    <input 
                        name="OWNER" 
                        class="w-full bg-input border border-border rounded-md px-3 py-2"
                        value={owner}
                    />
                </div>

                <div class="pt-4">
                    <button type="submit" class="bg-primary text-primary-foreground px-4 py-2 rounded-md hover:opacity-90">
                        Save Changes
                    </button>
                </div>
                <div id="status" class="text-sm mt-2 text-muted-foreground"></div>
            </form>
        </div>
    </div>

    <script>
        const form = document.getElementById('settings-form');
        const status = document.getElementById('status');

        form?.addEventListener('submit', async (e) => {
            e.preventDefault();
            if(status) status.innerText = 'Saving...';
            
            const data = new FormData(form as HTMLFormElement);
            const payload = Object.fromEntries(data.entries());

            try {
                const res = await fetch('/api/settings', {
                    method: 'POST',
                    body: JSON.stringify(payload)
                });
                if(status) {
                    if (res.ok) status.innerText = 'Settings saved!';
                    else status.innerText = 'Error saving settings.';
                }
            } catch (err) {
                if(status) status.innerText = 'Network error.';
            }
        });
    </script>
</Layout>

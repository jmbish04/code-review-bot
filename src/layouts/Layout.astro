---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Code Review Bot Dashboard" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-background font-sans antialiased text-foreground">
        <div class="flex min-h-screen">
            <!-- Sidebar -->
            <aside class="w-64 border-r border-border bg-card p-4 hidden md:block">
                <div class="font-bold text-xl mb-6 text-primary">Code Review Bot</div>
                <nav class="space-y-2">
                    <a href="/" class="block px-4 py-2 rounded-md hover:bg-muted text-sm font-medium transition-colors">Dashboard</a>
                    <a href="/settings" class="block px-4 py-2 rounded-md hover:bg-muted text-sm font-medium transition-colors">Settings</a>
                    
                    <div class="my-4 h-[1px] bg-border w-full mx-4 max-w-[calc(100%-2rem)]"></div>
                    
                    <div class="pt-2 pb-2 px-4 text-xs font-semibold text-muted-foreground uppercase tracking-wider">
                        Documentation
                    </div>
                    <a href="/docs/overview" class="block px-4 py-2 rounded-md hover:bg-muted text-sm font-medium transition-colors">Overview</a>
                    <a href="/docs/github-app" class="block px-4 py-2 rounded-md hover:bg-muted text-sm font-medium transition-colors">GitHub App Setup</a>
                    <a href="/docs/workflows" class="block px-4 py-2 rounded-md hover:bg-muted text-sm font-medium transition-colors">Workflows</a>
                </nav>
            </aside>
            
            <!-- Main Content -->
            <main class="flex-1 p-6 overflow-y-auto">
		        <slot />
            </main>
        </div>
	</body>
</html>
